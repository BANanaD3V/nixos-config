#
# wm independent hotkeys
#

# make sxhkd reload its configuration files:
super + shift + r
        pkill -USR1 -x sxhkd; polybar-msg cmd restart; ~/.config/bspwm/bspwmrc; notify-send 'sxhkd' "Reloaded polybar, bspwm & sxhkd"	
# terminal emulator
super + Return
	kitty

# program launcher
super + d
	rofi -show drun -config ~/.config/rofi/configs/config.rasi

# Volume control
XF86AudioRaiseVolume
	pamixer -i 2

XF86AudioLowerVolume
	pamixer -d 2

XF86AudioMute
	pamixer -t

# Brightness Control
XF86MonBrightnessUp
	bash -c '~/volume_brightness.sh brightness_up'

XF86MonBrightnessDown
	bash -c '~/volume_brightness.sh brightness_down' 

# Media keys
XF86AudioPlay
	playerctl play-pause

XF86AudioNext
        playerctl next

XF86AudioPrev
	playerctl previous

#
# bspwm hotkeys
#

# close and kill
super + {_,shift + } + q
	bspc node -{c,k}
#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#set monocle state
super + m
	bspc desktop -l next

# win-tab functions
#super + {_,shift + } + tab
#	bspc node -f {next,prev}.local.!hidden.window
#
#
# focus/swap
#

# focus the node in the given direction
super + {Left, Down, Up, Right}
	bspc node -f {west,south,north,east}

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} focused:'^{1-9,10}'

# swap windows or send it to different monitor
super + shift + {Left,Down,Up,Right}
    dir={west,south,north,east}; \
    bspc node -s "$dir.local" --follow \
        || bspc node -m "$dir" --follow \
        || bspc node -f {west,south,north,east}

#
# Screenshot
#

# take selection screenshot 
Print
	flameshot gui -c

# take full-screen screenshot
shift + Print
	flameshot full -c

#
# No-bullshit filehosting
#

# upload file to my filehosting
super + shift + u
	file=$(find $HOME -type f | dmenu -i -l 25) && curl -F "file=@$file" -Fsecret= https://0x0.banana.is-cool.dev/ | xclip -selection c && notify-send "File uploaded"

#
# Clipboard
#

# open clipboard
super + v
        rofi -modi "clipboard:/home/banana/.config/scripts/greenclip print" -show clipboard -config ~/.config/rofi/configs/clipboard.rasi
#
# Rofi menus
#

# powermenu
super + p:
	~/.config/rofi/scripts/powermenu

