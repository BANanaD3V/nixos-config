[colors]
base = #1e1e2e
mantle = #181825
crust = #11111b

text = #cdd6f4
subtext0 = #a6adc8
subtext1 = #bac2de

surface0 = #313244
surface1 = #45475a
surface2 = #585b70
  
overlay0 = #6c7086
overlay1 = #7f849c
overlay2 = #9399b2
 

blue = #89b4fa
lavender = #b4befe
sapphire = #74c7ec
sky = #89dceb
teal = #94e2d5
green = #a6e3a1
yellow = #f9e2af
peach = #fab387
maroon = #eba0ac
red = #f38ba8
mauve = #cba6f7
pink = #f5c2e7
flamingo = #f2cdcd
rosewater = #f5e0dc

transparent = #FF00000
 
[bar/main]
monitor=${env:MONITOR:}

width = 99%
height = 42pt
radius = 10

background = ${colors.crust}
foreground = ${colors.text}

offset-x = 0.5%
fixed-center = true

line-size = 3pt

border-size = 5pt
border-color = ${colors.transparent}

padding-left = 2
padding-right = 2

module-margin = 1

separator = |
separator-foreground = ${colors.surface0}

font-0 = JetBrainsMono Nerd Font:size=12;3
font-1 = JetBrainsMono Nerd Font Mono:size=12;3
font-2 = SymbolsNerdFontMono-Regular:size=12;3

modules-left = spotify cava volume
modules-center = bspwm
modules-right = fsroot fshome xkeyboard memory cpu date

cursor-click = pointer
cursor-scroll = ns-resize

enable-ipc = true

; tray-position = right

; wm-restack = generic
wm-restack = bspwm
; wm-restack = i3

override-redirect = false

[module/bspwm]
type = internal/bspwm
enable-click = true
format = <label-state> <label-mode>
format-background = ${colors.crust}

label-focused = 󰮯
label-focused-foreground = ${colors.yellow}
label-focused-padding = 1

label-occupied = 󰊠
label-occupied-foreground = ${colors.green}
label-occupied-padding = 1

label-empty = 󰑊
label-empty-foreground = ${colors.text}
label-empty-padding = 1

[module/xwindow]
type = internal/xwindow
label = %title:0:60:...%

[module/fsroot]
type = internal/fs
interval = 25

mount-0 = /

label-mounted = %{F#b4befe}%{F-} %percentage_used%%

label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.crust}

[module/fshome]
type = internal/fs
interval = 25

mount-0 = /home

label-mounted = %{F#b4befe}%{F-} %percentage_used%%

label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.crust}

[module/volume]
type = internal/pulseaudio
interval = 2
format-volume = <ramp-volume> <label-volume>
format-muted = %{F#b4befe}󰝟%{F-} Muted
format-muted-background = ${color.bg}
format-muted-foreground = ${color.fg}
label-volume =  %percentage%%
ramp-volume-0 = %{F#b4befe}%{F-}
ramp-volume-1 = %{F#b4befe}%{F-}
ramp-volume-2 = %{F#b4befe}󰕾%{F-}
ramp-volume-3 = %{F#b4befe}%{F-}
format-volume-foreground = ${color.fg}
format-volume-background = ${color.bg}
format-volume-padding = 0
format-muted-padding = 0

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = " "
format-prefix-foreground = ${colors.lavender}

label-layout = %layout%
label-layout-foreground = ${colors.text}

label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-foreground = ${colors.base}
label-indicator-background = ${colors.text}

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.lavender}
label = %percentage_used:2%%

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.lavender}
label = %percentage:2%%

[network-base]
type = internal/network
interval = 5
format-connected-prefix-foreground = ${colors.lavender}
format-connected-prefix = "Network "
format-connected = <label-connected>
format-disconnected = <label-disconnected>
label-disconnected = %{F#F0C674}%ifname%%{F#707	880} disconnected

[module/wlan]
inherit = network-base
interface-type = wireless
label-connected = %{F#F0C674}%ifname%%{F-} %essid% %local_ip%

[module/eth]
inherit = network-base
interface-type = wired
format-prefix = %ifname%%{F-} %local_ip%

[module/date]
type = internal/date
interval = 1

format-prefix = "󰥔 "
format-prefix-foreground = ${colors.lavender}

date = %I:%M %p
date-alt = %Y-%m-%d %H:%M:%S

label = %date%
label-foreground = ${colors.text}

[module/cava]
type = custom/script
tail = true
exec = $HOME/.config/polybar/cava.sh
format = <label>
format-background = ${colors.crust}
format-foreground = ${colors.text}
format-font = 2
label = %output%
format-padding = 0
exec-if = pgrep -f cava.sh | wc -l
;exec-if = python3 spotify_status.py -q | wc -l

[module/spotify]
type = custom/script
interval = 1
format-prefix = " "
format-prefix-foreground = ${colors.lavender}
format = <label>
exec = python3 $HOME/.config/PersonalScripts/spotify_status.py -q -f '{artist}: {song}'
;format-underline = #1db954
;control players (optional)
click-left = playerctl --player=spotify play-pause 
click-right = playerctl --player=spotify next 
click-middle = playerctl --player=spotify previous 

[settings]
screenchange-reload = true
pseudo-transparency = true

; vim:ft=dosini
